    <jumpFx path="audio/fx/jump.wav"/>
    <deathFx path="audio/fx/death.wav"/>
    <win1Fx path="audio/fx/victory1.wav"/>
    <win2Fx path="audio/fx/victory2.wav"/>
    
    <animations>
